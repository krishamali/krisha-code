/*faq*/

.faq-item {
    border-bottom: 1px solid black;
    padding: 15px 0;
}

.faq-question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    font-size: 18px;
    font-weight: 600;
}

.faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: 0.3s ease;
    color: #555;
    line-height: 1.6;
}

.faq-item.active .faq-answer {
    max-height: 200px;
    margin-top: 10px;
}

.faq-icon {
    position: relative;
    width: 20px;
    height: 20px;
    transition: 0.3s ease;
}

.faq-icon::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    height: 2px;
    background: #000;
    transform: translateY(-50%);
}

.faq-icon::after {
    content: "";
    position: absolute;
    left: 50%;
    top: 0;
    width: 2px;
    height: 100%;
    background: #000;
    transform: translateX(-50%);
    transition: 0.3s;
}

.faq-item.active .faq-icon::after {
    opacity: 0;
}
 <script>
            const faqItems = document.querySelectorAll(".faq-item");

            faqItems.forEach((item) => {
                const question = item.querySelector(".faq-question");

                question.addEventListener("click", () => {
                    faqItems.forEach((faq) => {
                        if (faq !== item) {
                            faq.classList.remove("active");
                        }
                    });

                    item.classList.toggle("active");
                });
            });
        </script>
