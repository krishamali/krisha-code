/* ================= MOBILE RESPONSIVE ================= */

@media (max-width: 768px) {
    .toggle-menu {
        display: flex;
    }
    .header__btn {
        display: none;
    }
    .btn-1 {
        display: block;
    }
    .navbar {
        position: absolute;
        top: 80px;
        left: 0;
        width: 100%;
        background: #f5f8b0;
        display: none;
    }
    .navbar ul {
        flex-direction: column;
        align-items: center;
        gap: 15px;
    }
    .navbar.active {
        display: block;
    }
}

 <script>
            const mobileMenu = document.getElementById("mobile-menu");
            const navbar = document.querySelector(".navbar");

            mobileMenu.addEventListener("click", () => {
                navbar.classList.toggle("active");
            });
        </script>
